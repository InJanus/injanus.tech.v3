    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: API flask app",
            "type": "python",
            "request": "launch",
            "args": [
                "run"
            ],
            "module": "flask",
            "jinja": true,
            "cwd": "${workspaceFolder}/api",
            "env": {
                "FLASK_APP": "${workspaceFolder}/api/api.py",
                "FLASK_ENV": "development",
            },
            "linux": {
                // no changes are needed but make sure you have the latest version of node
            }
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "test page launch",
            "url": "file://${workspaceFolder}/tools/test.html"
        },
    ]
}